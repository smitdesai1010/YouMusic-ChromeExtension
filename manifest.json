{
    "manifest_version": 2,
    "name": "YouMusic",
    "description": "YouTube Music Player",
    "version": "1.0",
    "content_scripts":[
            {
            "matches":[
                "<all_urls>"
            ],
            "js": ["content.js"]
            }
    ],


    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },

    "background": {
        "scripts": ["background.js"],
        "persistent": false
        },


    "permissions": [
        "activeTab",
        "storage",
        "https://ajax.googleapis.com/"
    ]
}