{
    "manifest_version": 2,
    "name": "YouMusic",
    "description": "YouTube Music Player",
    "version": "1.0",

    "browser_action": {
        "default_icon": "icon/icon.png",
        "default_popup": "popup.html"
    },

    "background":{
        "scripts": ["js/background.js"]
    },

    "permissions": [
        "activeTab",
        "storage",
        "https://ajax.googleapis.com/",
        "downloads"
    ]
}